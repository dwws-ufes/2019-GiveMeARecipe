@model ReviewViewModel

<form asp-controller="Reviews" asp-action="Create" asp-route-id="@Model.RecipeId" method="post">
    <div class="form-group">
        <label for="recipe-rating"><strong>Recipe Rating</strong></label>
        <input id="recipe-rating" class="form-control" asp-for="Evaluation" type="number" />
    </div>

    <div class="form-group">
        <label for="comment"><strong>Comment</strong></label>
        <textarea id="comment" class="form-control" asp-for="Comment"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Post Review</button>
</form>